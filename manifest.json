{
    "name":"crPyaxel",
    "version":"2.0.2",
    "manifest_version":2,
    "description":"Chrome interface to Pyaxel, a download accelerator in Python",
    
    "icons":{
        "128":"graph/128.png",
        "16":"graph/16.png",
        "48":"graph/48.png"
    },
    
    "background":{
        "scripts":[
            "ext.js",
            "utils.js",
            "string.js",
            "defines.js",
            "background.js"
        ]
    },

    "options_page":"options.html",

    "browser_action":{
        "default_icon":{
            "19":"graph/19.png",
            "38":"graph/32.png"
        },
        "default_title":"crPyaxel"
    },
    "omnibox":{
        "keyword":"pyaxel"
    },
    
    "minimum_chrome_version":"26",
    
    "permissions":[
        "contextMenus",
        "notifications",
        "storage",
        "activeTab"
    ],
    
    "web_accessible_resources":[
        "graph/32.png"
    ]
}
